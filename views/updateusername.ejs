    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#3c0000] text-[#f5d0c5]">
        <div class="flex justify-center items-center">
    <div >
        <h2>Update Username</h2>
        <form action="/username/<%=user._id%>" method="post">
            <input type="text" class="bg-[#774936] rounded-lg px-3 py-2 mt-2" value="<%=user.username%>" name="username">
            <input type="text" class="bg-[#774936] rounded-lg px-3 py-2 mt-2" placeholder="Username" name="newusername">
            <input type="submit" class="bg-[#050609] rounded-lg px-3 py-2 mt-2" value="Update User">
        </form>
    </div>
        </div>

</body>
</html>